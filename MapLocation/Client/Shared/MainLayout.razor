@inherits LayoutComponentBase
@inject IJSRuntime JS

<MudThemeProvider Theme="currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Rounded.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">MapLocation</MudText>
        <MudSpacer />

        <MudIconButton Icon="@Icons.Material.Rounded.Refresh" Style="color: #ffffff" Size="Size.Medium" Class="ma-2" OnClick="@(UpdateSystem)"/>

        @*<MudMenu Dense="true" Icon="@Icons.Material.Filled.MoreVert" Variant="Variant.Filled" Color="Color.Tertiary" Direction="Direction.Bottom" OffsetX="true" FullWidth="true">
          <MudMenuItem Style="font-size: 11px; width: 150px;" OnClick="@(UpdateSystem)">Atualizar</MudMenuItem>
          <MudMenuItem Style="font-size: 11px;" OnClick="@(() => RedirecionaRota("authentication/logout"))">Sair</MudMenuItem>
        </MudMenu>*@

    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="3" Style="background-color: #ECEFF1;">
        <LeftSideMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Style="padding-top: 15px; padding-bottom: 10px;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudMessageBox @ref="mbox" Title="Atualizar" CancelText="Cancelar">
    <MessageContent>
        <MudGrid>
            <MudItem xs="12" sm="12" md="12" lg="12" xl="12" Class="p-0 pl-3">
                <MudText Typo="Typo.body2">
                    Ao atualizar o sistema a pagina será recarregada.
                </MudText>
            </MudItem>
            <MudItem xs="12" sm="12" md="12" lg="12" xl="12" Class="p-0 pl-3 pb-3">
                <MudText Typo="Typo.body2">
                    <strong>Deseja continuar ?</strong>
                </MudText>
            </MudItem>
        </MudGrid>
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Tertiary">Atualizar</MudButton>
    </YesButton>
</MudMessageBox>

@code {
    MudTheme currentTheme = new MudTheme();

    MudMessageBox mbox { get; set; }

    bool _drawerOpen = true;

    void DrawerToggle() =>
        _drawerOpen = !_drawerOpen;

    protected override void OnInitialized() =>
        currentTheme = PaleteColors;

    public async void UpdateSystem()
    {
        bool? result = await mbox.Show();

        if (!Equals(result, null))
            if (result == true)
                await JS.InvokeVoidAsync("UpdateSystem");
    }

    MudTheme PaleteColors = new MudTheme()
    {
        Palette = new Palette()
        {
            AppbarBackground = "#594AE2",
            Tertiary = "#594AE2"
        }
    };
}


