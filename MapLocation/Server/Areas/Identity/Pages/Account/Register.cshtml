@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro - MapLocation";
}

<div style="width: 100%; height: 64px; background-color: #594AE2; position: absolute; top: 0px; left: 0px; box-shadow: 0px 2px 1px -1px rgba(0,0,0,0.2),0px 1px 1px 0px rgba(0,0,0,0.14),0px 1px 3px 0px rgba(0,0,0,0.12); padding-left: 36px; padding-top: 15px; ">

    <label style="font-size: 1.5rem; color: #FFFFFF; font-weight: 400; line-height: 1.334; letter-spacing: 0; font-family: 'Roboto','Helvetica','Arial','sans-serif' ">
        MapLocation
    </label>

</div>

<div class="row mt-5">
    <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">

    </div>
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 card shadow p-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Criar uma Nova Conta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>E-mail</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Re-Senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
    <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
