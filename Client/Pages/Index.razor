                        <MudNavLink Icon="@Icons.Material.Rounded.Stop" OnClick="StopWatch">Parar Navegação</MudNavLink>
                        <MudNavLink Icon="@Icons.Material.Rounded.LayersClear" OnClick="RemoverMarcacoes">Limpar Mapa</MudNavLink>
                        <MudNavLink Icon="@Icons.Material.Rounded.Map" OnClick="GetLayout">Layout</MudNavLink>
                    </MudNavMenu>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" sm="12" md="12" lg="12" xl="12">
                <MudExpansionPanels >
                    <MudExpansionPanel Text="Previsão do Tempo" Style="background-color: #ECEFF1;" Dense="true">
                        
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="Navegação" Class="pa-0" Style="background-color: #ECEFF1; padding: 0px;" Dense="true">
                        @if (!Equals(positioHistory, null) && positioHistory.Count > 0)
                        {
           
                        }
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudItem>
        </MudGrid>

    </MudItem>
